{
  "compilerOptions": {
		"target": "esnext",
		"strict": true,
		"incremental": true,
		"outDir": "built",
		"noEmitOnError": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"importsNotUsedAsValues": "error",
    "inlineSourceMap": true,
    "resolveJsonModule": true,
		"types": ["node"],
		"lib": [
		    "esnext"
		]
	},
	"include": [
    "moode.js",
    "build.js",
		"src/**/*.ts"
	]
}
